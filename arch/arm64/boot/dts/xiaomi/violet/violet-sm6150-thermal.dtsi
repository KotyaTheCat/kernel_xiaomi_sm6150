&pm6150_vadc {
	quiet_therm {
		reg = <ADC_GPIO4_PU2>;
		label = "quiet_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
	};
};

 &thermal_zones {
	lmh-dcvs-00 {
        status = "disabled";
	};

	lmh-dcvs-01 {
        status = "disabled";
	};

	sdm-therm {
		trips {
			shutdown-config {
				temperature = <63000>;
				hysteresis = <1000>;
				type = "critical";
			};
		};
	};

	sdm-therm-monitor {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-governor = "user_space";
		thermal-sensors = <&pm6150_adc_tm ADC_AMUX_THM2_PU2>;
		trips {
			active-config0 {
				temperature = <125000>;
				hysteresis = <1000>;
				type = "passive";
			};
		};
	};

	soc {
		cooling-maps {
			soc_cpu6 {
				trip = <&soc_trip>;
				cooling-device =
					<&CPU6 10 10>;
			};
			soc_cpu7 {
				trip = <&soc_trip>;
				cooling-device =
					<&CPU7 10 10>;
			};
		};
	};

	pm6150-bcl-lvl0 {
		cooling-maps {
			vbat_cpu6 {
				trip = <&bcl_lvl0>;
				cooling-device =
					<&CPU6 10 10>;
			};
			vbat_cpu7 {
				trip = <&bcl_lvl0>;
				cooling-device =
					<&CPU7 10 10>;
			};
		};
	};
};
